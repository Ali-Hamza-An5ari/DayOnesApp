        <Label Margin="10"
    Text="Already Have an Account?"
    

    FontSize="16"
    
    TextColor="{StaticResource DefaultWhite}"
    WidthRequest="220"
          LineBreakMode="TailTruncation"
   
    HorizontalOptions="Center"
